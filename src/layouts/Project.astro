---
import type { CollectionEntry } from 'astro:content';

type Props = CollectionEntry<'projects'>['data'];

const { title, heroImage } = Astro.props;
---

<article>
	{heroImage && <img width={720} height={360} src={heroImage} alt="" />}
	<h1 class="title">{title}</h1>
	<hr />
	<slot />
</article>
